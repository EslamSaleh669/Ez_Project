<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detailsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="12dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/unitImageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:sliderAnimationDuration="1000"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMarginBottom="30dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="2"
                        app:sliderStartAutoCycle="true" />

                    <ImageView
                        android:id="@+id/backBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="24dp"
                        android:paddingBottom="24dp"
                        android:src="@drawable/ic_back_arrow" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="16dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shareBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_white_share" />

                        <ImageView
                            android:id="@+id/likeBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_white_like_empty" />
                    </LinearLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="18dp">



                            <TextView
                                android:id="@+id/unitTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/black"
                                android:maxLines="2"
                                android:fontFamily="@font/plautenezbold"
                                android:textSize="20sp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="2"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="start"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:layout_weight="1">


                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        android:id="@+id/unitRate"
                                        style="@style/MyRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent" />

                                    <TextView
                                        android:id="@+id/unitTotalRate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:layout_marginStart="8dp"
                                        android:gravity="top" />

                                    <TextView
                                        android:id="@+id/unitTotalRateCount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="top"
                                        android:layout_marginStart="8dp"
                                        android:gravity="top" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:paddingStart="2dp"
                                    android:paddingEnd="2dp"
                                    android:paddingTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:background="@drawable/roundedshape"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/unitPrice"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="17sp"
                                        android:fontFamily="@font/plautenezbold"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="@string/night"
                                        android:layout_marginStart="3dp"
                                        android:id="@+id/perwhat1"
                                        android:fontFamily="@font/plautenezregular"
                                        android:textColor="@color/white"
                                        android:textSize="15sp" />
                                </LinearLayout>



                            </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/about_this_host"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/plautenezbold"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/hostDetailsBtn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:orientation="horizontal">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:id="@+id/userImage"
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/ic_test_user" />

                                <ImageView
                                    android:id="@+id/verifyIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|end"
                                    android:layout_margin="8dp"
                                    android:visibility="gone"
                                    android:src="@drawable/ic_crown" />
                            </FrameLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/username"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:layout_marginTop="3dp"
                                    android:fontFamily="@font/plautenezbold"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/userTitles"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Superhost . verified"
                                    android:textColor="@color/black"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            />

                        <TextView
                            android:id="@+id/sendMsgBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:text="Contact host"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp"
                            android:visibility="visible" />


                    </LinearLayout>

                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="5dp">

                                <TextView
                                    android:id="@+id/guestsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:fontFamily="@font/plautenezregular"
                                    android:padding="10dp"


                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="5dp">

                                <TextView
                                    android:id="@+id/bedsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:padding="10dp"
                                    android:fontFamily="@font/plautenezregular"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="5dp">

                                <TextView
                                    android:id="@+id/bathCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:padding="10dp"
                                    android:fontFamily="@font/plautenezregular"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="12dp"
                                android:layout_marginEnd="8dp"
                                android:layout_marginBottom="12dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="18dp"
                                app:cardElevation="5dp">

                                <TextView
                                    android:id="@+id/roomsCount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/white"
                                    android:padding="10dp"
                                    android:fontFamily="@font/plautenezregular"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/description"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plautenezbold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/unitDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/plautenezregular"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/descriptionReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:text="@string/read_more"
                        android:fontFamily="@font/plautenezregular"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/wifiOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_wifi" />

                        <ImageView
                            android:id="@+id/coffeeOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_coffe" />

                        <ImageView
                            android:id="@+id/parkingOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_parking" />

                        <ImageView
                            android:id="@+id/petOption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_pet" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/amenities"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:fontFamily="@font/plautenezbold"
                        android:textStyle="bold" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/amentiesRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/required_services"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:visibility="gone"
                        android:id="@+id/reqservtxt"
                        android:fontFamily="@font/plautenezbold"
                        android:textStyle="bold" />
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/feesRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp" />


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="172dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:layout_marginStart="50dp"
                            android:layout_marginEnd="50dp"
                            android:background="@drawable/half_rounded_whit_bg"
                            android:orientation="horizontal"
                            android:padding="8dp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_normal_pin" />

                            <TextView
                                android:id="@+id/locationText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="16dp"
                                android:text="@string/here_where_address_goes"
                                android:textColor="@color/black"
                                android:fontFamily="@font/plautenezregular"
                                android:textSize="18sp" />
                        </LinearLayout>


                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/reviewsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:text="@string/reviews"
                            android:textColor="@color/black"
                            android:fontFamily="@font/plautenezregular"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/reviewUserImage"
                                    android:layout_width="52dp"
                                    android:layout_height="52dp"
                                    android:src="@drawable/ic_test_user" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/reviewUsername"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:fontFamily="@font/plautenezbold"
                                        android:textStyle="bold" />

                                    <androidx.appcompat.widget.AppCompatRatingBar
                                        android:id="@+id/reviewRating"
                                        style="@style/MyRatingBar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:numStars="5"
                                        android:rating="5" />

                                    <TextView
                                        android:id="@+id/reviewDate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/plautenezregular"
                                        android:textColor="@color/black" />
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/reviewContent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/readAllReviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="8dp"
                                android:text="@string/read_all_reviews"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />


                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/things_to_keep_in_mind"
                        android:textColor="@color/black"
                        android:fontFamily="@font/plautenezbold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:weightSum="2"
                         >
                        <TextView
                            android:id="@+id/checkInTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_weight="1"
                            android:fontFamily="@font/plautenezregular"
                            android:gravity="center"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/checkOutTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:fontFamily="@font/lato_regular"
                            android:textSize="16sp" />

                    </LinearLayout>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/more_details"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/plautenezbold"
                        android:textSize="18sp"
                        android:textStyle="bold"

                        />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="@string/house_rules"
                            android:fontFamily="@font/plautenezbold"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/readHouseRules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:fontFamily="@font/lato_regular"
                            android:text="@string/read"
                            android:textColor="@color/colorPrimary" />

                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/cancellation_policy"
                                android:fontFamily="@font/plautenezbold"
                                android:textColor="@color/black"
                                android:textSize="16sp" />


                            <TextView
                                android:id="@+id/cancellationPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:visibility="gone"
                                android:text="@string/free_cancellation_for_48_hour" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/readCancellationPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:text="@string/read"
                            android:fontFamily="@font/lato_regular"
                            android:textColor="@color/colorPrimary"
                            android:visibility="visible" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/reportBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:text="@string/report_this_listing"
                        android:textStyle="bold"
                        android:fontFamily="@font/plautenezbold"
                        android:layout_marginTop="5dp"
                        android:textColor="#7A7A7A"
                        android:textSize="16sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:paddingStart="16dp"
                    android:text="@string/similar_places"
                    android:textColor="@color/black"
                    android:fontFamily="@font/plautenezbold"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/similarRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/summaryPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:fontFamily="@font/lato_bold"
                        android:textSize="17sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:id="@+id/perwhat"
                        android:fontFamily="@font/lato_bold"
                        android:layout_marginStart="3dp"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatRatingBar
                        android:id="@+id/summaryRatingBar"
                        style="@style/MyRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/summaryRateScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="8dp"
                        android:gravity="top"
                        android:text="4.2" />

                    <TextView
                        android:id="@+id/summaryRateCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:layout_marginStart="8dp"
                        android:gravity="top"
                        android:text="(155)"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/reserveBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/lato_bold"
                android:layout_weight="1"
                android:background="@drawable/rounded_filled_primary_bg"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/check_availability"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:scaleX="2"
            android:scaleY="2"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/loading" />

    </FrameLayout>
</LinearLayout>
